<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:id="@+id/card"
    app:cardBackgroundColor="#7F5A4C">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/name"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Name"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/petname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/pet"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Pet"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/petspecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/gender"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Gender"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/petgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/owner"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Owner"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/petowner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/contact"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Contact"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/contactowner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/treatment"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Treatment"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="left"
                    android:textColor="#FFC368"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="left"
                    android:textColor="#FFFFFF"
                    android:id="@+id/pettreatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/delete"
            android:layout_marginLeft="290dp"
            android:src="@drawable/delete"
            android:background="?android:selectableItemBackground"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>